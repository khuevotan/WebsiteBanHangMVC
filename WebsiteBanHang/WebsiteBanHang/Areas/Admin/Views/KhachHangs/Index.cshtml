@model IEnumerable<WebsiteBanHang.CSDL.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string gtinh = "";
}



<div class="content-wrapper">
    <br />
    <table class="table table-bordered" style="width:100%" id="example">
        <thead class="thead-dark">
            <tr>
                <th>Mã khách hàng</th>
                <th>Tài khoản</th>
                <th>Họ khách hàng</th>
                <th>Tên khách hàng</th>
                <th>Ngày sinh</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>Giới tính</th>
                <th>Hình DD</th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{if (item.GioiTinh == true)
                        { gtinh = "Nam"; }
                        else
                        { gtinh = "Nữ"; }
                    }
                    @gtinh
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhDD)
                </td>

            </tr>
        }

    </table>

</div>

@section scripts {
    <script type="text/javascript">
    $(document).ready(function () {
            $("#example").dataTable({
                "columns": [
                    { 'data': 'MaKH' },
                    { 'data': 'TaiKhoan' },
                    { 'data': 'HoKH' },
                    { 'data': 'TenKH' },
                    { 'data': 'NgaySinh' },
                    { 'data': 'SoDT' },
                    { 'data': 'DiaChi' },
                    { 'data': 'Email' },
                    { 'data': 'GioiTinh' },
                    { 'data': 'HinhDD' },
                ],
                "dom": 'Bfrtip',
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            })
        })</script>
}
