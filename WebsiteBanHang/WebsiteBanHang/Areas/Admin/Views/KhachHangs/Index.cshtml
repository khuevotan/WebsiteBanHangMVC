@model IEnumerable<WebsiteBanHang.CSDL.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MaKH", rowsPerPage: 4);
    String gtinh = "";
    int i = 0;
}

<div class="content-wrapper">
    <h3>DANH SÁCH KHÁCH HÀNG</h3>
    <p>
        @Html.ActionLink("Thêm khách hàng mới", "Create")
    </p>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaKH","Mã khách hàng"), //the model fields to display
        grid.Column("TaiKhoan","Tài khoản"),
          grid.Column("HoKH","Họ khách hàng"),
          grid.Column("TenKH","Tên khách hàng"),
            grid.Column("NgaySinh","Ngày Sinh"),
        grid.Column("SoDT","Số điện thoại"),
          grid.Column("DiaChi","Địa chỉ"),
             grid.Column("Email","Email"),


              grid.Column("GioiTinh","Giới tính",format: (@item) => @item.GioiTinh==true?"Nam":"Nữ"),
               grid.Column("HinhDD","Hình đại diện"),


grid.Column("Chức năng", format: @<text>

    <a href="@Url.Action("Details",
                        new { id = item.MaKH})" class="edit-btn">
        <abbr title="Xem chi tiết">
            <img src="/images/details.png" width="20" height="20" />
        </abbr>
    </a>
    <a href="@Url.Action("Delete",
                        new { id = item.MaKH})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
    <a href="@Url.Action("Edit",
                        new { id = item.MaKH})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),

}
)
    </div>
</div>