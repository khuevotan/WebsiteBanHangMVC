@model IEnumerable<WebsiteBanHang.CSDL.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MaSP", rowsPerPage: 4);
    int i = 0;
}


<div class="content-wrapper">

    <h3>DANH SÁCH SẢN PHẨM</h3>

    <p>
        @Html.ActionLink("Thêm sản phẩm mới", "Product")
    </p>

    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaSP","Mã sản phẩm"), //the model fields to display
        grid.Column("TenSP","Tên sản phẩm"),
          grid.Column("HinhDD","Hình đại diện"),
          grid.Column("SoLuong","Số lượng"),
        grid.Column("GiaBan","Giá bán"),
          grid.Column("PhoBien","Phổ biến"),
             grid.Column("NgayDang","Ngày đăng"),
    grid.Column("DanhMuc.TenDM","Tên danh mục"),
     grid.Column("NhaCungCap.TenNCC","Nhà cung cấp"),


grid.Column("Chức năng", format: @<text>

    <a href="@Url.Action("Details",
                        new { id = item.MaSP})" class="edit-btn">
        <abbr title="Xem chi tiết">
            <img src="/images/details.png" width="20" height="20" />
        </abbr>

    </a>
    <a href="@Url.Action("Delete",
                        new { id = item.MaSP})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
    <a href="@Url.Action("Edit",
                        new { id = item.MaSP})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),

}
)
    </div>

</div>


