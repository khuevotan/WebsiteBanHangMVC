@model IEnumerable<WebsiteBanHang.CSDL.DanhMuc>

@{
    ViewBag.Title = "DanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MaDM", rowsPerPage: 4);
    int i = 0;
}



<div class="content-wrapper">
    <br/>
    <h3>DANH SÁCH DANH MỤC</h3>
    <p>
        @Html.ActionLink("Thêm danh mục mới", "Create")
    </p>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaDM","Mã khách hàng"), //the model fields to display
            grid.Column("TenDM","Tên danh mục"),

             grid.Column("MoTaCT","Mô tả"),



               grid.Column("HinhDD","Hình đại diện"),


grid.Column("Chức năng", format: @<text>

    <a href="@Url.Action("Details",
                        new { id = item.MaDM})" class="edit-btn">
        <abbr title="Xem chi tiết">
            <img src="/images/details.png" width="20" height="20" />
        </abbr>
    </a>
    <a href="@Url.Action("Delete",
                        new { id = item.MaDM})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
    <a href="@Url.Action("Edit",
                        new { id = item.MaDM})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),

}
)
    </div>
</div>