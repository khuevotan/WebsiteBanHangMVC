@model WebsiteBanHang.Models.HomeModel

@{
    ViewBag.Title = "SanPhamDanhMuc2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================ FILTER TOP END.// ================================= -->


<div class="container">

    <br />

    <header class="mb-3">
        <div class="form-inline">
            <strong class="mr-md-auto">Các sản phẩm</strong>

            <div class="btn-group">

                @foreach (var item in Model.ListDanhMuc)
                {
                    <a href="@Url.Action("SanPhamDanhMuc", "DanhMuc", new { MaDM = item.MaDM})" class="btn btn-success" data-toggle="tooltip" title="List view">
                        <i class="fa fa-bars"></i>
                    </a>

                    <p>   </p>


                    <a href="@Url.Action("SanPhamDanhMuc2", "DanhMuc", new { MaDM = item.MaDM})" class="btn btn-success" data-toggle="tooltip" title="Grid view">
                        <i class="fa fa-th"></i>
                    </a>
                }




            </div>
        </div>
    </header><!-- sect-heading -->

    <div class="row">

        @foreach (var item in Model.ListSanPham)
        {
            <div class="col-md-3">
                <figure class="card card-product-grid">
                    <div class="img-wrap">
                        <span class="badge badge-danger"> NEW </span>
                        <img src="~/Content/images/items/@item.HinhDD">
                    </div> <!-- img-wrap.// -->
                    <figcaption class="info-wrap">
                        <a href="#" class="title mb-2">@item.TenSP</a>
                        <div class="price-wrap">
                            <span class="price">@item.GiaBan đ</span>

                        </div> <!-- price-wrap.// -->
                        @foreach (var itemncc in Model.ListNhaCungCap.Where(n => n.MaNCC == item.MaNCC))
                        {
                            <p class="text-muted">@itemncc.TenNCC</p>
                        }

                        <hr>
                        <a href="@Url.Action("ThemVaoGioDMGr", "GioHang", new { MaSP = item.MaSP, item.MaDM })" class="btn btn-success"><i class="fa fa-shopping-cart"></i>  Thêm vào giỏ </a>

                    </figcaption>
                </figure>
            </div> <!-- col.// -->

        }

    </div> <!-- row end.// -->


    <nav class="mb-4" aria-label="Page navigation sample">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>


</div> <!-- container .//  -->

