@model WebsiteBanHang.CSDL.KhachHang

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

<style>

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #BA68C8;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }
</style>

<div class="content-wrapper">
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="container">
            <div class="main-body">
                <div class="row gutters-sm"> 
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="~/Content/images/avatars/kh/@Model.HinhDD" alt="Admin" class="rounded-circle" width="150">
                                        <div class="mt-3">
                                            <h4>@Model.HoKH @Model.TenKH</h4>
                                            <a href="@Url.Action("LichSuMuaHang", "KhachHang", new { id = Model.MaKH })" class="btn btn-success">
                                                Lịch sử mua
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <ul class="list-group list-group-flush">


                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                                        <span class="text-secondary">Trống</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                                        <span class="text-secondary">Trống</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                                        <span class="text-secondary">Trống</span>
                                    </li>
                                </ul>
                            </div>
                        </div>         
                    <div class="col-md-8">
                            <div class="row">          
                                <div class="col-md-7 border-right">
                                    <div class="p-3 py-5">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-right">Đổi mật khẩu</h4>
                                        </div>
                                        <div class="row mt-3">
                                            @using (Html.BeginForm("ChangePassword", "KhachHang", new { id = Model.TaiKhoan }, FormMethod.Post))
                                            {

                                                @Html.AntiForgeryToken()

                                                <div class="form-horizontal">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                    <div class="form-group">
                                                        <label class="control-label">Mật khẩu cũ</label>
                                                        <div>
                                                            <input type="password" maxlength="20" name="MatKhauCu" class="form-control" width="150" />
                                                            <span class="text-danger">@ViewData["TrongMKCu"]</span>
                                                            <span class="text-danger">@ViewData["SaiMKCu"]</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label">Mật khẩu mới</label>
                                                        <div>
                                                            <input type="password" maxlength="20" name="MatKhauMoi" class="form-control" />
                                                            <span class="text-danger">@ViewData["TrongMKMoi"]</span>
                                                            <span class="text-danger">@ViewData["TrungMKCu"]</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label">Nhập lại mật khẩu mới</label>
                                                        <div>
                                                            <input type="password" maxlength="20" name="MatKhauNhapLai" class="form-control" />
                                                            <span class="text-danger">@ViewData["TrongMKNhapLai"]</span>
                                                            <span class="text-danger">@ViewData["KhacMKMoi"]</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="mt-5 text-center">
                                                            <input type="submit" value="Lưu" class="btn btn-success" />
                                                            <a class="btn btn-google" href="@Url.Action("TrangCaNhan", "KhachHang", new { id = Model.TaiKhoan })">Hủy</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>


