@model WebsiteBanHang.Models.HomeModel
@{
    ViewBag.Title = "TrangCaNhan";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}


<link href="~/Content/css/KhachHang/history.css" rel="stylesheet" />


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y">
    <div class="container">

        <div class="container bootdey">
            <div class="panel panel-default panel-order">
                <div class="panel-heading">
                    <h3>Đơn hàng của bạn</h3>
                    <br />
                </div>

                <div class="panel-body">

                    @foreach (var item in Model.ListHoaDon)
                    {
                        <div class="row">
                            @foreach (var khachhang in Model.ListKhachHang)
                            {
                                <div class="col-md-1"><img src="~/Content/images/avatars/kh/@khachhang.HinhDD" class="media-object img-thumbnail" /></div>
                                <div class="col-md-11">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <a href=""><label class="label label-success">Mã hóa đơn: </label></a>
                                            <span><strong>@item.MaHD</strong></span> <span class="label label-info">

    @if (@item.MaTT == "TT1")
    {
        <div>
            <p>

                Trạng thái: Chưa duyệt
            </p>

        </div>
    }


    @if (@item.MaTT == "TT2")
    {
        <div>
            <p>

                Trạng thái: Đã duyệt
            </p>

        </div>
    }

    @if (@item.MaTT == "TT3")
    {
        <div>
            <p>

                Trạng thái: Đang vận chuyển
            </p>

        </div>
    }


    @if (@item.MaTT == "TT5")
    {
        <div>
            <p>

                Trạng thái: Hủy
            </p>

        </div>
    }





</span><br />
                                            Ngày đặt: @item.NgayDat<br />
                                            <a data-placement="top" class="btn btn-success btn-xs glyphicon glyphicon-ok" href="#" title="View"></a>
                                            <a data-placement="top" class="btn btn-danger btn-xs glyphicon glyphicon-trash" href="#" title="Danger"></a>
                                            <a data-placement="top" class="btn btn-info btn-xs glyphicon glyphicon-usd" href="#" title="Danger"></a>
                                        </div>

                                        <div class="col-xl-5">

                                        </div>

                                        <div class="col-xl-1">
                                            <a href="@Url.Action("HoaDonChiTiet", "KhachHang", new { MaHD = item.MaHD})"
                                               class="btn btn-success btn-sm">Xem Chi Tiết </a>
                                        </div>
                                        <div class="col-md-12"> </div>
                                    </div>
                                </div>
                            }

                            <br /><br />
                        </div>

                    }

                </div>

            </div>
        </div>


    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
