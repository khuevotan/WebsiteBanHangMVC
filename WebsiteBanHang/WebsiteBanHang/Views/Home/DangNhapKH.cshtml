@model WebsiteBanHang.CSDL.KhachHang

@{
    ViewBag.Title = "DangNhapKH";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}


<section class="section-conten padding-y" style="min-height:84vh">

    <!-- ============================ COMPONENT LOGIN   ================================= -->
    <div class="card mx-auto" style="max-width: 380px; margin-top:50px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Đăng Nhập</h4>

                <a href="#" class="btn btn-facebook btn-block mb-2"> <i class="fab fa-facebook-f"></i> &nbsp;  Đăng nhập bằng Facebook</a>
                <a href="#" class="btn btn-google btn-block mb-4"> <i class="fab fa-google"></i> &nbsp;  Đăng nhập bằng Google</a>

                <div class="card-body">

                    @using (Html.BeginForm("DangNhapKH", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "Đăng nhập không thành công. Kiểm tra lại các thông tin.", new { @class = "text-danger" })
                    
                        <br/>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.TaiKhoan, "", new { @class = "form-control", @placeholder = "Username" })

                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Password" })
                        </div>

                        <div class="form-group">
                            <a href="#" class="float-right">Quên mật khẩu?</a>
                            <label class="float-left custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" checked="">
                                <div class="custom-control-label">Ghi nhớ </div>
                            </label>
                        </div> <!-- form-group form-check .// -->

                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-success btn-block" value="Login" />
                        </div>

                       
                    }
                </div>
        </div> <!-- card-body.// -->
    </div> <!-- card .// -->

    <p class="text-center mt-4">Bạn chưa có tài khoản? <a href="~/Home/DangKyKH"> Đăng ký</a></p>
    <br><br>
    <!-- ============================ COMPONENT LOGIN  END.// ================================= -->


</section>