@model WebsiteBanHang.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>Danh Mục</h6>
                        <nav class="nav-home-aside">

                            <ul class="menu-category">
                                @foreach (var item in Model.ListDanhMuc)
                                {
                                    <li>
                                        @Html.ActionLink(item.TenDM, "SanPhamDanhMuc", "DanhMuc", new { @MaDM = item.MaDM }, null)
                                    </li>
                                }
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/slide6.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide5.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide7.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-success text-center text-white mb-0 p-2">Sản Phẩm Phổ Biến</h6>
                            @foreach (var item in Model.ListSanPham.Where(n => n.PhoBien == true).Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.TenSP</h6>
                                        <a href="@Url.Action("Detail", "Product", new { MaSP = item.MaSP})"
                                           class="btn btn-success btn-sm">Xem </a>
                                    </div>
                                    <img src="~/Content/images/items/@item.HinhDD" height="80" class="img-bg">
                                </div>

                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION REGION =============== -->
    <section class="padding-bottom">
        <ul class="row">
            <li class="col-xl-2 col-md col-6">
            <li><img src="~/Content/images/banners/slide10.png" class="w-100" /></li>
            <li class="col-xl-2 col-md col-6"></li>
            <li><img src="~/Content/images/banners/slide11.png" class="w-100" /></li>
            <li class="col-xl-8 col-md col-6"></li>
        </ul>
    </section>

    <section class="padding-bottom">
        <ul class="row mt-2">
            <li class="col-xl-6 col-md col-6 text-center">
                <p>
                    <b> Đặt hàng trong tuần giao hàng cuối tuần</b> </br>
                    Các đơn hàng được tổng hợp từ chủ nhật đến 2h chiều thứ 5 hàng tuần. Thứ 6 farm cắt rau củ quả và gửi đi trong ngày để đảm bảo độ tươi ngon. Các bạn sẽ nhận được rau củ quả vào thứ 7 hàng tuần
                </p>
            </li>


            <li></li>
            <li class="col-xl-6 col-md col-6 text-center">
                <p>
                    <b>Sản phẩm đạt 100% Organics</b>   </br>
                    Tất cả các loại rau củ quả đều được trồng từ nông trại hữu cơ, an toàn cho sức khoẻ.
                </p>
            </li>


        </ul>
    </section>


    <!-- =============== SECTION Gợi ý hôm nay =============== -->
    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Gợi ý hôm nay</h4>
        </header>
        <div class="row row-sm">
            @foreach (var item in Model.ListSanPham.Take(6))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="" class="card card-sm card-product-grid">
                        <a href="@Url.Action("Detail", "Product", new { MaSP = item.MaSP})" class="img-wrap"> <img src="~/Content/images/items/@item.HinhDD"> </a>
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("Detail", "Product", new { MaSP = item.MaSP})" class="title">@item.TenSP</a>
                            <div class="price mt-1">@item.GiaBan</div> <!-- price-wrap.// -->
                            <a class="btn btn-success btn-sm" href="@Url.Action("ThemVaoGio", "GioHang", new { MaSP = item.MaSP })"> <span class="glyphicon glyphicon-shopping-cart"></span>  Thêm vào giỏ </a>
                        </figcaption>
                    </div>
                </div> <!-- col.// -->
            }
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION Gợi ý hôm nay .//END =============== -->


    @foreach (var item in Model.ListDanhMuc)
    {
        <!-- =============== SECTION RAU =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">

              
                <h4 class="title-section text-uppercase">
                    <a href="@Url.Action("SanPhamDanhMuc", "DanhMuc", new { @MaDM = @item.MaDM}) "
                       class="btn btn-success rounded-pill">@item.TenDM</a>
                </h4>
            </header>

            <div class="card card-home-category">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        <div class="home-category-banner">
                           
                            <img src="~/Content/images/danhmuc/@item.HinhDD" class="img-bg">
                        </div>
                    </div> <!-- col.// -->


                    <div class="col-md-9">
                        <ul class="row no-gutters bordered-cols">
                            @foreach (var demhai in Model.ListSanPham.Where(n => n.MaDM == @item.MaDM).Take(4))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("Detail", "Product", new { MaSP = demhai.MaSP})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">@demhai.TenSP  </h6>
                                            <img class="img-sm float-right" src="~/Content/images/items/@demhai.HinhDD">
                                            <p class="text-muted"> @demhai.GiaBan đ</p>
                                            <a class="btn btn-success btn-sm" href="@Url.Action("ThemVaoGio", "GioHang", new { MaSP = demhai.MaSP})"> <span class="glyphicon glyphicon-shopping-cart"></span>  Thêm vào giỏ </a>
                                        </div>
                                    </a>
                                </li>

                            }
                        </ul>
                    </div> <!-- col.// -->




                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <br />
        <!-- =============== SECTION RAU END =============== -->
    }

    <!-- =============== SECTION SERVICES =============== -->
    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Các nhà cung cấp sản phẩm</h4>
        </header>

        <div class="row">

            @foreach (var item in Model.ListNhaCungCap.Take(4))
            {
                <div class="col-md-3 col-sm-6">
                    <article class="card card-post">
                        <img src="~/Content/images/ncc/@item.HinhDD" class="card-img-top">
                        <div class="card-body">
                            <h6 class="title">@item.TenNCC</h6>
                            
                            <p class="small text-uppercase text-muted">  <i class="fa fa-map-marker-alt"></i> @item.DiaChi</p>
                        </div>
                    </article> <!-- card.// -->
                </div> <!-- col.// -->
            }
        </div> <!-- row.// -->

    </section>
    <!-- =============== SECTION SERVICES .//END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Bài viết mẹo hay trong gia đình</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <div class="home-category-banner bg-light-green">
                        <h5 class="title">Kinh nghiệm hay</h5>
                        <p>
                            Chia sẻ những kinh nghiệm hay hữu ích trong cuộc sống hàng ngày.
                        </p>

                       
                        <a href="/BaiViet/Index" class="btn btn-outline-success rounded-pill">Xem thêm</a>
                        <img src="~/Content/images/items/baiviet.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <div>
                        <ul class="row no-gutters bordered-cols">
                            <li class="col-lg-3 col-md-4">
                                <a href="#" class="item">
                                    <div class="card-body">
                                        <h6 class="title">Well made electronic  stuff collection  </h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/7.jpg">
                                        <p class="text-muted"> Tokyo, Japan</p>
                                    </div>
                                </a>
                            </li>

                            @foreach (var item in Model.ListBaiViet.Take(10))
                            {
                        <li class=" col-lg-3 col-md-4">

                            <a href="@Url.Action("ChiTietBaiViet", "BaiViet", new { MaBV = item.MaBV})" class="item">
                                <div class="card-body">
                                    <h6 class="title">@item.TenBV</h6>
                                    <img class="img-sm float-right" src="~/Content/images/posts/@item.HinhDD" @item.MaNV>
                                    <p class="text-muted"> @item.NgayDang</p>
                                </div>
                            </a>
                        </li>
                            }


                        </ul>
                    </div> <!-- col.// -->

                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REGION =============== -->
    <section class="padding-bottom">
        <ul class="row mt-4 ">
            <li class="col-xl-6 col-md col-6"><img src="~/Content/images/banners/slide8.png" class="w-100" /></li>
            <li class="col-xl-6 col-md col-6"><img src="~/Content/images/banners/slide9.png" class="w-100" /></li>


        </ul>
    </section>
</div>

