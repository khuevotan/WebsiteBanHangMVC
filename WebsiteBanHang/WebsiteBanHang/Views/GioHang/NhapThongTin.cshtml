@model List<CartItem>
@using WebsiteBanHang.Models;

@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}

@if (Model == null || Model.Count == 0)
{
    <div class="container">
        <div class="card mx-auto" style="max-width: 380px; margin-top:50px;">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    <p class="text-info text-center">
                        Giỏ hàng của bạn rỗng!
                    </p>
                </h4>
            </div> <!-- card-body.// -->
        </div> <!-- card .// -->
        <br />
        <br />
        <a href="javascript: history.back()" class="btn btn-light"> &laquo Quay về</a>
        <br />
        <br />
    </div>
}
else
{
    <section class="section-content padding-y">
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    <div class="card">
                        <table class="table table-borderless table-shopping-cart">
                            <form action="@Url.Action("NhapThongTin", "ThanhToan")" method="get">
                                <article class="card-body">
                                    <header class="mb-4"><h4 class="card-title">Nhập thông tin người nhận</h4></header>

                                    <div class="form-horizontal">
                                        <hr />
                                        <div class="form-group">
                                            <label>Số điện thoại</label>
                                            <input type="number" class="form-control" placeholder="" name="SDT" value="">

                                        </div> <!-- form-group end.// -->
                                        <div class="form-group">
                                            <label>Địa chỉ</label>
                                            <input type="tel" class="form-control" placeholder="" name="DiaChiNhan" value="">


                                        </div> <!-- form-group end.// -->
                                        <div class="form-group">
                                            <label>Ghi chú</label>

                                            <input type="text" class="form-control" placeholder="" name="GhiChu" value="">

                                        </div> <!-- form-group end.// -->
                                      

                                        <div class="card-body ">
                                            <span class="input-group-append" style="float:right">
                                                <button type="submit" class="btn btn-success btn-sm"> <h5>Thanh Toán</h5></button>
                                            </span>
                                        </div>
                                    </div>
                                </article><!-- card-body.// -->


                            </form>

                          

                        </table>
                       </div> <!-- card.// -->

                    <div class="alert alert-success mt-3">
                        <p class="icontext"><i class="icon text-success fa fa-truck"></i>Giao hàng trong ngày</p>
                    </div>

                </main> <!-- col.// -->
                <aside class="col-md-3">
                    <div class="card mb-3">
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label>Có mã giảm giá</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="" placeholder="">
                                        <span class="input-group-append">
                                            <button class="btn btn-success">Áp dụng</button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div> <!-- card-body.// -->
                    </div>  <!-- card .// -->
                  
                </aside> <!-- col.// -->
            </div>

        </div> <!-- container .//  -->
    </section>




}