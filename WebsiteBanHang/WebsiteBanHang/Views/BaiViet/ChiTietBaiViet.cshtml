@model WebsiteBanHang.Models.HomeModel

@{
    ViewBag.Title = "ChiTietBaiViet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-3 bg-success">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li></li>
        </ol>
    </div>
</section>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y">

    @foreach (var item in Model.ListBaiViet)
    {
        <div class="container">
            <!-- ============================ ITEM DETAIL ======================== -->

            <div class="row">
                <aside class="col-md-4">
                    <div class="card">
                        <article class="gallery-wrap">
                            <div class="img-big-wrap">
                                <div> <a href="#"><img src="~/Content/images/posts/@item.HinhDD"></a></div>
                            </div> <!-- slider-product.// -->
                         
                        </article> <!-- gallery-wrap .end// -->
                    </div> <!-- card.// -->
                </aside>
                <main class="col-md-8">
                    <article class="product-info-aside">

                        <h2 class="title mt-3">@item.TenBV </h2>

                        <div class="rating-wrap my-3">
                            <ul class="rating-stars">
                                <li style="width:80%" class="stars-active">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                                <li>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                            </ul>
                         
                        </div> <!-- rating-wrap.// -->

                        <div class="mb-3">
                            <var class="price h4">@item.NoiDung</var>
                            
                        </div> <!-- price-detail-wrap .// -->



                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
            <!-- ================ ITEM DETAIL END .// ================= -->


        </div> <!-- container .//  -->
    }

</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
